= t("devise.mailer.#{@resource.role}.hello")
= "\r\n"
- markdown = Redcarpet::Markdown.new(Redcarpet::Render::StripDown, { hard_wrap: true, lax_spacing: true, filter_html: true })
= markdown.render(t("devise.mailer.#{@resource.role}.invitation_instructions.someone_invited_you", email: @resource.email))

= accept_invitation_url(@resource, :invitation_token => @token)

- if @resource.invitation_due_at
  = markdown_plain_text(t("devise.mailer.#{@resource.role}.invitation_instructions.accept_until", due_date: l(@resource.invitation_due_at, format: :'devise.mailer.invitation_instructions.accept_until_format')))


= strip_tags t("devise.mailer.#{@resource.role}.invitation_instructions.having_trouble", email: mail_to('info@aoz-freiwillige.ch'))

= strip_tags t("devise.mailer.#{@resource.role}.invitation_instructions.greetings")
