= t("devise.mailer.#{@resource.role}.hello")
= "\r\n" * 2
= strip_tags t("devise.mailer.#{@resource.role}.invitation_instructions.someone_invited_you", email: @resource.email)
= "\r\n"
= accept_invitation_url(@resource, :invitation_token => @token)
= "\r\n"
- if @resource.invitation_due_at
  = strip_tags t("devise.mailer.#{@resource.role}.invitation_instructions.accept_until",
    due_date: l(@resource.invitation_due_at, format: :'devise.mailer.invitation_instructions.accept_until_format'))
  = "\r\n"
= strip_tags t("devise.mailer.#{@resource.role}.invitation_instructions.having_trouble", email: mail_to('info@aoz-freiwillige.ch'))
= "\r\n"
= strip_tags t("devise.mailer.#{@resource.role}.invitation_instructions.greetings")
