nav.navbar.navbar-top
  .container
    .navbar-header
      button.navbar-toggle.collapsed aria-controls='navbar'
        | aria-expanded='false' data-target='#navbar'
        | data-toggle='collapse' type='button'
        span.sr-only Toggle navigation
        span.icon-bar
        span.icon-bar
        span.icon-bar
      a.navbar-brand href='#'
        = image_tag 'AOZ_Logo.svg', text: 'AOZ Logo'
    #navbar.collapse.navbar-collapse
      ul.nav.navbar-nav
        - if user_signed_in?
          li
            = link_to 'Logout', destroy_user_session_path, method: :delete
          - if current_user.superadmin?
            li
              = link_to 'Create superadmin', new_user_url
          - if current_user.admin_or_superadmin?
            li
              = link_to 'Show users', users_path
          li
            = link_to 'Clients', clients_path
          li
            = link_to "#{current_user.profile.first_name} #{current_user.profile.last_name}", current_user.profile if current_user.profile.present?
