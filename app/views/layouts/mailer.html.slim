html
  head
    meta charset='utf-8'
    meta http-equiv='X-UA-Compatible' content='IE=edge'
    meta name='viewport' content='width=device-width, initial-scale=1'
    css:
      *, *:before {
        box-sizing: border-box;
      }
      html, body {
        font-family: Arial,Helvetica Neue, Helvetica, sans-serif;
        font-size: 10px;
        line-height: 1.4
      }

      h1 {
        font-size: 22px;
      }
      h2 {
        font-size: 19px;
      }
      h3 {
        font-size: 17px;
      }
      h4 {
        font-size: 12px;
        margin-bottom: 2px;
        margin-top: 8px;
      }
      h5 {
        font-size: 11px;
      }
      p {
        font-size: 10px;
        margin-top: 2px;
      }

      hr {
        border-color: #e63028;
      }

      p .red {
        background: none;
        color: #e63028;
      }

  body
    = yield
    = render 'application/footer'
