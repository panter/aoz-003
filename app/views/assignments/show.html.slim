          li= t('assignment_pdf.agreement_text.list2.item2')

    .row.row-bottom
      .row
        .col-xs-5
          = t('assignment_pdf.city_date')
        .col-xs-7.col-input
          = "#{t('assignment_pdf.zurich')}, #{l @assignment.created_at.to_date}"
      .row
        .col-xs-4
          .row
            = t('assignment_pdf.for_aoc')
          .row
            .col-xs-4.col-input
