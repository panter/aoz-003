          .col-xs-4
            = t('assignment_pdf.trial_time')
          .col-xs-8.col-input
        .row
          .col-xs-4
            = t('assignment_pdf.duration')
          .col-xs-8.col-input
        .row
          .col-xs-4
            = t('assignment_pdf.special')
