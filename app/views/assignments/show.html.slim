            = @assignment.client.contact.primary_phone
        .row
          .col-xs-5
            = t('assignment_pdf.email')
          .col-xs-7.col-input
            = @assignment.client.contact.primary_email
        .row
          .col-xs-5
            = t_attr(:date_of_birth, Client)
          .col-xs-7.col-input
            = @assignment.client.date_of_birth
      .col-xs-6
        .row
          .col-xs-5
            = t_attr(:first_name, Contact)
          .col-xs-7.col-input
            = @assignment.client.contact.first_name
        .row
          .col-xs-5
            = "#{t_attr(:postal_code, Contact)} / #{t_attr(:city, Contact)}"
          .col-xs-7.col-input
            = "#{@assignment.client.contact.postal_code} #{@assignment.client.contact.city}"
        .row
          .col-xs-5
            = t('assignment_pdf.telephone_2')
          .col-xs-7.col-input
            = @assignment.volunteer.contact.contact_phones.first.body
        .row
          .col-xs-5
            = "#{t_attr(:nationality, Client)}, #{t_attr(:state, Client)}"
          .col-xs-7.col-input
            = "#{country(@assignment.client.nationality)}, #{@assignment.client.state}"
        .row
          .col-xs-5
            = t_attr(:languages, Volunteer)
          .col-xs-7.col-input
