h1 Probezeit Erinnerungen

.table-responsive
  table.table.table-no-border-top
    thead
      tr
        th= t_model(Volunteer)
        th= t_attr(:acceptance, Volunteer)
        th= t_model(Client)
        th= t_attr(:period_start, Assignment)
        th Feedback
        th Quittieren
    tbody
      - @trial_end.each do |reminder|
        tr
          td= link_to reminder.volunteer.contact.full_name, volunteer_path(reminder.volunteer)
          td= t("volunteer_applications.acceptance.#{reminder.volunteer.acceptance}")
          td= link_to reminder.assignment.client.contact.full_name, client_path(reminder.assignment.client)
          td= link_to l(reminder.assignment.period_start.to_date), edit_assignment_path(reminder.assignment)
          td
            - if reminder.assignment.feedbacks.trial.any?
              = link_to l(reminder.assignment.feedbacks.trial.last.updated_at.to_date), polymorphic_path([reminder.volunteer, reminder.assignment, reminder.assignment.feedbacks.trial.last])
            - else
              = link_to 'Feedback hinzuf√ºgen', url_for(new_polymorphic_path([reminder.volunteer, reminder.assignment, Feedback], kind: 0)), { class: 'btn btn-success btn-xs' }
          td= button_to 'Quittieren', { action: 'destroy', id: reminder.id }, { method: :delete, class: 'btn btn-danger btn-xs' }
