tr
  td= t("salutation.#{client.salutation}") if client.salutation?
  td= client.contact.full_name
  td= client.contact.city
  td= client.contact.postal_code
  td= client.birth_year&.year
  td
    - client.relatives.each do |relative|
      = relative
      br
  td= nationality_name(client.nationality)
  td.language-skill-index
    - [client.language_skills.german, client.language_skills.native_languages].flatten.each do |language|
      span= language.full_language_skills

  td= client.goals
  td= client.interests
  td= client.competent_authority
  td.no-wrap= l(client.created_at.to_date)
  - if action_name == 'with_assignment'
    td = t("simple_form.options.assignment.state.#{client.assignment.state}")
  - if policy(Client).comments?
    td= client.comments
  = render 'index_actions', subject: client
  - if client.assignment.nil?
    td.hidden-print= button_link t('find_volunteer'), find_volunteer_client_path(id: client)
  - else
    td.hidden-print= button_link t_title(:show, Assignment), assignment_path(client.assignment)
